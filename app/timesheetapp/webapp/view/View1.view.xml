<mvc:View
    controllerName="timesheetapp.controller.View1"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:unified="sap.ui.unified"
>
    <SplitContainer
        id="SplitContDemo"
        mode="ShowHideMode"
        initialMaster="master"
        initialDetail="detail"
    >
        <masterPages>
            <Page
                id="master"
                title="Employee Details"
                titleAlignment="Start"
                backgroundDesign="List"
            >
                <headerContent>
                    <Toolbar>
                        <ToolbarSpacer />
                        <Button
                            id="Oncreateid"
                            text="Create"
                            type="Emphasized"
                            press="onCreateEmployee"
                        />
                        <Button
                            id="OnUpdateid"
                            text="Update"
                            type="Emphasized"
                            press="onUpdateEmployee"
                            enabled="false"
                        />
                    </Toolbar>
                </headerContent>
                <content>
                    <!-- <Table
                        id="employeeTable"
                        items="{/employees}"
                    > -->
                    <Table
                        id="employeeTable"
                        items="{EmployeeModel>/}"
                        mode="SingleSelectLeft"
                        itemPress="onEmployeeSelect"
                        selectionChange="onEmployeeSelect"
                    >
                        <columns>
                            <Column>
                                <Text text="Name" />
                            </Column>
                            <Column>
                                <Text text="Client" />
                            </Column>
                            <Column>
                                <Text text="Project" />
                            </Column>
                            <Column>
                                <Text text="Client ID" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{EmployeeModel>NAME}" />
                                    <Text text="{EmployeeModel>CLIENT}" />
                                    <Text text="{EmployeeModel>PROJECT}" />
                                    <Text text="{EmployeeModel>CLIENTID}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

                    <viz:VizFrame
                        id="leaveChart"
                        width="100%"
                        height="400px"
                        vizType="column"
                    >
                        <viz:dataset>
                            <viz.data:FlattenedDataset data="{EmployeeModel>/}">
                                <viz.data:dimensions>
                                    <viz.data:DimensionDefinition
                                        name="Employee"
                                        value="{NAME}"
                                    />
                                </viz.data:dimensions>
                                <viz.data:measures>
                                    <viz.data:MeasureDefinition
                                        name="Leaves"
                                        value="{leaveCount}"
                                    />
                                </viz.data:measures>
                            </viz.data:FlattenedDataset>
                        </viz:dataset>

                        <viz:feeds>
                            <viz.feeds:FeedItem
                                uid="valueAxis"
                                type="Measure"
                                values="Leaves"
                            />
                            <viz.feeds:FeedItem
                                uid="categoryAxis"
                                type="Dimension"
                                values="Employee"
                            />
                        </viz:feeds>
                    </viz:VizFrame>
                </content>
            </Page>
        </masterPages>

        <detailPages>
            <Page
                id="detail"
                title="TimeSheet Details"
                titleAlignment="Center"
                backgroundDesign="Solid"
            >
                <headerContent>
                    <Toolbar>
                        <Title text="" />
                        <ToolbarSpacer />
                        <!-- <ComboBox
                            id="yearComboBox"
                            items="{/years}"
                            selectionChange="onYearMonthChange"
                        >
                            <items>
                                <core:Item
                                    key="{year}"
                                    text="{year}"
                                />
                            </items>
                        </ComboBox>
                        <ComboBox
                            id="monthComboBox"
                            items="{/months}"
                            selectionChange="onYearMonthChange"
                        >
                            <items>
                                <core:Item
                                    key="{month}"
                                    text="{month}"
                                />
                            </items>
                        </ComboBox> -->
                        <DatePicker
                                id="Datepickeridfortable"
                                change="onYearMonthChange"
                                placeholder="Select year and month"
                                displayFormat="MMMM yyyy"
                            />
                        <Button
                            id="Timesheetsaveid"
                            text="Save"
                            type="Emphasized"
                            press="OnSaveTimeSheetData"
                            enabled="false"
                        />
                        <Button
                            id="Timesheetdownloadid"
                            text="Download"
                            type="Emphasized"
                            press="OnDownloaddata"
                            enabled="false"
                        />
                    </Toolbar>
                </headerContent>
                <content>
                    <ScrollContainer
                        width="100%"
                        horizontal="true"
                        
                    >
                        <Table
                            id="timesheetTable"
                            inset="false"
                            width="auto"
                            class="sapUiResponsiveMargin"
                        />
                        </ScrollContainer>
                        <!-- ðŸ“… Calendar to select holidays -->
                        <!-- <Panel
                            headerText="Client Holidays"
                            expandable="true"
                            expanded="false"
                        > -->
                        <FlexBox justifyContent="End"  class="sapUiTinyMarginEnd">
                            <DatePicker
                                id="clientHolidayPicker"
                                change="onClientHolidaySelected"
                                placeholder="Select Client Holiday"
                                
                            />
                            </FlexBox>
                        <!-- </Panel> -->

                        <!-- ðŸ“Š Chart for Holidays -->
                        <viz:VizFrame
                            id="clientHolidayChart"
                            width="100%"
                            height="300px"
                            vizType="column"
                        >
                            <viz:dataset>
                                <viz.data:FlattenedDataset
                                    data="{EmployeeModel>/}"
                                >
                                    <viz.data:dimensions>
                                        <viz.data:DimensionDefinition
                                            name="Month"
                                            value="{Month}"
                                        />
                                    </viz.data:dimensions>
                                    <viz.data:measures>
                                        <viz.data:MeasureDefinition
                                            name="Client Holidays"
                                            value="{clientHolidayCount}"
                                        />
                                    </viz.data:measures>
                                </viz.data:FlattenedDataset>
                            </viz:dataset>
                            <viz:feeds>
                                <viz.feeds:FeedItem
                                    uid="valueAxis"
                                    type="Measure"
                                    values="Client Holidays"
                                />
                                <viz.feeds:FeedItem
                                    uid="categoryAxis"
                                    type="Dimension"
                                    values="Month"
                                />
                            </viz:feeds>
                        </viz:VizFrame>
                    
                </content>
            </Page>
        </detailPages>
    </SplitContainer>
</mvc:View>
