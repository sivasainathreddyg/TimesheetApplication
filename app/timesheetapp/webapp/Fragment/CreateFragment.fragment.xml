<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="newEmployeeDialog" title="Create New Employee" class="sapUiResponsivePadding">
        <content>
            <VBox justifyContent="SpaceBetween" class="sapUiSmallMargin">
                <Label text="Name"/>
                <Input id="inpName" class="sapUiSmallMarginBottom"/>

                <Label text="Client"/>
                <Input id="inpClient" class="sapUiSmallMarginBottom"/>
                
                <Label text="Project"/>
                <Input id="inpProject" class="sapUiSmallMarginBottom"/>
                
                <Label text="Client ID"/>
                <Input id="inpClientId" class="sapUiSmallMarginBottom"/>
                
                <Label text="Start Date"/>
                <DatePicker id="inpStartDate" displayFormat="yyyy-MM-dd" class="sapUiSmallMarginBottom"/>
                
                <Label text="End Date"/>
                <DatePicker id="inpEndDate" displayFormat="yyyy-MM-dd" class="sapUiSmallMarginBottom"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Save" type="Emphasized" press="onSaveEmployee"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCloseDialogCreate"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
